<table id="myTable">
    <thead>

    <tr>
        <th>
            ID
        </th>
        <th>
            Name
        </th>
        <th>
            Renter
        </th>
    </tr>
    </thead>
    <tbody>

    <@foreach (var person in Model)
    {
        <tr>
            <td>
                @person.Id
            </td>
            <td>
                @person.Name
            </td>
            <td>
                <input 
                    type="checkbox" 
                    class="chkRenter" 
                    
                           @(person.IsRenter ? "checked" : "")
                    data-person-id="@person.Id"/>
            </td>

        </tr>
    }
    </tbody>
</table>

